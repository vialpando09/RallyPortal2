@model IEnumerable<RallyPortal.Models.TeamData>

@{
    ViewBag.Title = "Teams";
}


@section featured {
    @Html.Partial("_featured", new RallyPortal.Models.FeaturedData { ImageUrl = "~/Images/login.jpg", Title = "Team & Drivers" })
}
<div class="title main-title">
    teams <span>& drivers</span>
</div>

@foreach (var team in Model)
{
    <div class="entry">
        <div class="inner1">
            <div class="entry-image" style="background-image: url(@Url.Action("GetPhotoThumbnail",
     new { path = team.TeamImageUrl, width = 701 }));">
            </div>
            <div class="entry-title">Team - @team.TeamName</div>
        </div>
        <div class="inner5">
            <p><b>Driver Name: </b>@team.Driver</p>
            <p><b>Co-Driver Name: </b>@team.CoDriver</p>
        </div>
        <div class="inner2">
            <div class="inner3">
                &laquo;
            </div>
            <div class="inner4">
                &raquo;
            </div>
            <div class="clear"></div>
        </div>
    </div>
}
