@model IEnumerable<RallyPortal.Models.TeamData>

@{
    ViewBag.Title = "Teams";
}


@section featured {
    @Html.Partial("_featured", new RallyPortal.Models.FeaturedData { ImageUrl = "~/Images/login.jpg", Title = "Team & Drivers" })
}
<div class="title main-title">
    teams <span>& drivers</span>
</div>

@foreach (var team in Model)
{
    <div class="entry">
        <div class="inner1">
            <div class="entry-image" style="background-image: url(@Url.Action("GetPhotoThumbnail",
     new { path = team.TeamImageUrl, width = 701 }));">
            </div>
            <div class="entry-title">@Html.ActionLink("Team - " + team.TeamName, "Details", "Team", new { id=team.Id }, null)</div>
        </div>        
    </div>
}
